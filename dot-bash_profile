# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
    . ~/.bashrc
fi

# Disable core dumps; they're generated by Geant4 job aborts
ulimit -c 0

# User specific environment and startup programs
export EASYBUILD_GITHUB_USER=kelseymh
export PATH=$PATH:$HOME/bin:/scratch/group/mitchcomp/bin

source module-setup		# Add Mitchcomp modules to search path

# Desired build environment
module add foss/2022b		# Grace uses HMNS, must load toolchain first
module add CMake
module add git
